[env]
TERM = "xterm-256color"

[font]
size = {{ if .desktop }} 12 {{ else }} 14 {{ end }}
# offset = { y = 1 }
normal = { family = "Hack", style = "Regular" }


[terminal.shell]
program = "/bin/fish"

[window]
decorations = "none"
dynamic_title = true
startup_mode = "Maximized"
dynamic_padding = true

[keyboard]
bindings = [ 
    { key = "Q", mods = "Control | Shift", action = "Quit" } 
]


